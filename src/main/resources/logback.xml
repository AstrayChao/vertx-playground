<configuration>
    <appender name="LOG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %level [%thread] %logger{0} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <logger name = "io.netty" level="INFO"/>
    <root level="info">
        <appender-ref ref="LOG"/>
    </root>
</configuration>